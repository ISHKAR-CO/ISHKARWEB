{%- include 'page-block-section' -%}
{% schema %}
  {
    "name": "Unlive",
	"class":"index-section--flush unlive-template",
    "blocks": [
	{
		"type":"banner",
		"name":"Banner",
		"settings":[
          {
              "type":"image_picker",
              "id":"image",
              "label":"Upload Image"
          },
          {
              "type":"select",
              "id":"alignment",
              "label":"Select Image alignmnet",
              "default":"center",
              "options":[
                  {
                    "value":"top center",
                    "label":"Top"
                  },
                  {
                    "value":"center",
                    "label":"Middle"
                  },
                  {
                    "value":"bottom center",
                    "label":"Bottom"
                  }
              ]
          },
		{
			"type":"header",
			"content":"Detail Part"
		},
          {
              "type":"select",
              "id":"content_alignment",
              "label":"Select Content alignment",
              "default":"left",
			  "options":[
				{
				  "label":"Align left",
				  "value":"left"
				},
				{
				  "label":"Align right",
				  "value":"right"
				}
			  ]
          },
          {
              "type":"checkbox",
              "id":"content_bg_color",
              "label":"Show background color",
              "default": true
          },
          {
              "type":"checkbox",
              "id":"content_border_bottom",
              "label":"Show bottom border",
              "default": true
          },
		{
			"type":"text",
			"id":"coll_title",
			"label":"Enter Title",
			"default":"Title"
		},
		{
			"type":"text",
			"id":"coll_subtitle",
			"label":"Enter Subtitle",
			"default":"Subtitle"
		},
		{
			"type":"richtext",
			"id":"coll_detail",
			"label":"Enter Detail"
		}
		]
	  },
	{
		"type":"about-block",
		"name":"About Block",
		"settings":[
		  {
			"type":"text",
			"id":"title",
			"label":"Enter title",
			"default":"Un Live X Ishkar"
		  },
		  {
			"type":"text",
			"id":"subtitle",
			"label":"Enter subtitle",
			"default":"Artists Imagine a Future"
		  },
		  {
			"type":"header",
			"content":"Image"
		  },
		  {
			"type":"image_picker",
			"id":"image",
			"label":"Upload image"
		  },
		  {
			"type":"text",
			"id":"image_text",
			"label":"Image caption"
		  },
		  {
			"type":"header",
			"content":"Text"
		  },
		  {
			"type":"textarea",
			"id":"text_bold",
			"label":"Enter text",
			"info":"This text will appear bigger than other font"
		  },
		  {
			"type":"richtext",
			"id":"text_detail",
			"label":"Enter text"
		  },
		  {
			"type":"header",
			"content":"Other Text"
		  },
		  {
			"type":"text",
			"id":"text_title",
			"label":"Enter title"
		  },
		  {
			"type":"textarea",
			"id":"text_title_detail",
			"label":"Enter detail"
		  }
		]
	},
	{
		"type":"image-video",
		"name":"Image Video Block",
		"settings":[
			{
				"type":"checkbox",
				"id":"direction",
				"label":"Change Image direction"
			},
			{
				"type":"select",
				"id":"select_type",
				"label":"Select",
				"default":"image",
				"options":[
					{
					  "value":"image",
					  "label":"Image"
					},
					{
					  "value":"video",
					  "label":"Video"
					}
				]
			},
			{
				"type":"header",
				"content":"Image Part"
			},
			{
				"type":"image_picker",
				"id":"image_1",
				"label":"Upload image 1"
			},
			{
				"type":"image_picker",
				"id":"image_2",
				"label":"Upload image 2"
			},
			{
				"type":"image_picker",
				"id":"image_3",
				"label":"Upload image 3"
			},
			{
				"type":"image_picker",
				"id":"image_4",
				"label":"Upload image 4"
			},
			{
				"type":"image_picker",
				"id":"image_5",
				"label":"Upload image 5"
			},
			{
				"type":"header",
				"content":"Image Part"
			},
            {
              "type": "video_url",
              "id": "video_link",
              "label":"Video link",
              "accept": ["youtube","vimeo"]              
            },
			{
				"type":"image_picker",
				"id":"video_link_image",
				"label":"Upload Thumbnial Image"
			},
			{
				"type":"header",
				"content":"Text"
			},
            {
              "type": "text",
              "id": "title",
              "label":"Enter title"
            },
			{
				"type":"richtext",
				"id":"detail",
				"label":"Enter detail"
			},
			{
				"type":"text",
				"id":"text_title",
				"label":"Enter Text"
			},
			{
				"type":"url",
				"id":"text_title_link",
				"label":"Provide link for text"
			}
		]
	},
	  {
		 "type":"newsletter",
		 "name":"Newsletter",
		 "settings":[
			{
		  "type":"checkbox",
		  "label":"Show this Section",
		  "id":"Show_section",
		  "default":true
		},
		{
		  "type":"image_picker",
		  "label":"Upload Background Image",
		  "id":"bg_img"
		},
    {
      "type": "select",
      "id": "alignment",
      "label":"Image alignment",
      "default": "center",
      "options": [
        {
          "value": "top",
          "label":"Top"
        },
        {
          "value": "center",
          "label":"Middle"
        },
        {
          "value": "bottom",
          "label":"Bottom"
        }
      ]
    },
    {
      "type": "select",
      "id": "hero_layout",
      "label": "Layout",
      "default": "full_width",
      "options": [
        {
          "label":"Full width",
          "value": "full_width"
        },
        {
          "label":"Fixed width",
          "value": "fixed_width"
        }
      ]
    },
    {
      "type": "select",
      "id": "hero_size",
      "label":"Section height",
      "default": "large",
      "options": [
        {
          "label":"Extra Small",
          "value": "x-small"
        },
        {
          "label":"Small",
          "value": "small"
        },
        {
          "label":"Medium",
          "value": "medium"
        },
        {
          "label":"Large",
          "value": "large"
        },
        {
          "label":"Extra Large",
          "value": "x-large"
        },
        {
          "label":"Auto",
          "value": "auto"
        }
      ]
    },
		{
		  "type":"text",
		  "label":"Enter Title",
		  "id":"title"
		},
		{
		  "type":"textarea",
		  "label":"Enter detail",
		  "id":"detail",
		  "default":"Be the first to know about our latest collections, pop ups & collaborations"
		},
		{
		  "type":"text",
		  "label":"Enter Button label",
		  "id":"btn_title",
		  "default":"SIGN UP"
		}
		 ]
		}
	  
	]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}
