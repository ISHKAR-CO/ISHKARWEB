<div class="home-banner-two" data-section-id="{{ section.id }}" data-section-type="home-banner-two">
  <div class="wc_img_brn_two image_banner banner-height-medium lazyload"
       data-bgset="{% include 'bgset', image: section.settings.image %}"
       data-sizes="auto"
       data-parent-fit="cover"
       style="background-position: {{ section.settings.alignment }}; background-image: url('{{ section.settings.image | img_url: '300x300' }});">
    <div class="banner-header large-down--hide"></div>
  <div class="banner-caption d-flex flex-wrap">
   
    {%- for block in section.blocks -%}
    {%- if block.type == "text" -%}
    <div class="inner_caption {{ block.type }} d-flex flex-wrap align-items-center justify-content-center">
      {%- if block.settings.link != blank -%}<a class="full-width-link" href="{{ block.settings.link }}"></a>{%- endif -%}
      <div class="wrapper">
        <h3 class="s-subtitle">{{ block.settings.subtitle }}</h3>
        <h2 class="s-title h2-large">
          {{- block.settings.title -}}</h2>
        {%- if block.settings.content != blank -%}
        <div class="bnr_small_content">
          <p>{{block.settings.content}}</p>
        </div>
        {%- endif -%}
      </div>
    </div>
    {%- endif -%}
    {%- if block.type == "text-border" -%}
    <div class="inner_caption {{ block.type }} d-flex flex-wrap align-items-center justify-content-center">
      <div class="wrapper">
        <div class="text-border-title">{{ block.settings.title }}</div>
      </div>
    </div>
    {%- endif -%}
    {%- endfor -%}
      
  </div>
    </div>
</div>

