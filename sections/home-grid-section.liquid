<div data-section-id="{{ section.id }}" data-section-type="home-grid-section" class="home-grid-section">
  <div class="page-width">
    <ul class="grid hgs-grid hgs-grid-slider">
      {%- for block in section.blocks -%}
      	{%- if block.type == "text" -%}
      <li class="grid__item medium-up--one-third hgs-grid-items">
        <div class="wrapper">
          {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}" title="{{ block.settings.link  | split:'/' | last | replace:'-',' ' | capitalize }}">{%- endif -%}
          {%- if block.settings.subtitle != blank -%}
          <h4 class="s-subtitle">{{ block.settings.subtitle }}</h4>
          {%- endif -%}{%- if block.settings.title != blank -%}
          <h3 class="s-title">{{ block.settings.title }}</h3>{%- endif -%}{%- if block.settings.detail != blank -%}
          <div class="text">
            {{ block.settings.detail }}
          </div>{%- endif -%}
          {%- if block.settings.link != blank -%}</a>{%- endif -%}
        </div>
      </li>
      {%- endif -%}
      {%- endfor -%}
    </ul>
  </div>
</div>

