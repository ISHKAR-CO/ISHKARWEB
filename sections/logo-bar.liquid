<div class="logo-parent-div">
  {% if section.settings.title != blank %}
    <div class="section-header text-center sh-with-bg-gradiant-re_ sh-with-bg_" {% if template contains 'index' %} style="padding-top: 0; margin-bottom: 0;" {%endif%} >
      {%- if section.settings.subtitle != blank -%}<h3 class="s-subtitle" >{{ section.settings.subtitle | escape }}</h3>{%- endif -%}
      <h2 class="h2-large s-title"><span class="inner_warpper">{{ section.settings.title | escape }}</span>
        <span class="s-title-cover"></span>
      </h2>
    </div>
  {% endif %}
  <div class="page-width" {% if template contains 'index' %} style="padding: 0 0 30px" {%endif%} >
      {% if section.blocks.size > 0 %}
      <ul class="logo-bar{% if section.settings.title_enable %} logo-bar--large{% endif %} d-flex justify-content-between align-items-center">
        {% for block in section.blocks %}
        <li class="wc_logo_img logo-bar__item{% if section.settings.title_enable %} logo-bar__item--large{% endif %} logo_Wc_frame{{block.id}}" {{ block.shopify_attributes }}>
          {%- if block.settings.frame_img != blank -%}
          <img data-src="{{block.settings.frame_img | img_url:'master'}}" class="img_layer"/>
          {%- comment -%}
          <style>
            .logo_Wc_frame{{block.id}}:hover{background-image:url({{block.settings.frame_img | img_url:'master'}});}
          </style>
          {%- endcomment -%}
          {%- endif -%}
          {% if block.settings.link != blank %}
          <a href="{{ block.settings.link }}" class="logo-bar__link" {%- if block.settings.redirect_link -%} target="_blank" {%- endif -%} >
            {% endif %}
            {% if block.settings.image != blank %}
            <img src="data:image/png;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" class="logo-bar__image lazyload" data-src="{{ block.settings.image | img_url: '160x160', scale: 2}}"  alt="{{ block.settings.image.alt }}" width="auto" height="auto" />
            {% else %}
            {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            {% if block.settings.link != blank %}
          </a>
          {% endif %}
        </li>
        {% endfor %}
      </ul>
      {% endif %}

      {% if section.blocks.size == 0 %}
      {% include 'no-blocks' %}
      {% endif %}
</div>
</div>


