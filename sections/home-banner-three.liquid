<div class="home-banner-two home-banner-three" data-section-id="{{ section.id }}" data-section-type="home-banner-three">
  {%- assign image_count = 0 -%}
  <div class="banner-img-wrapper">
    {%- for block in section.blocks -%}
    {%- if block.type == "image" -%}
    {%- assign image_count = image_count | plus:1  -%}
    <div class="wc_img_brn_two image_banner banner-height-medium lazyload {% if image_count > 1 %}hide{%- endif -%}"
         data-img-show-count="{{ image_count }}"
         data-bgset="{% include 'bgset', image: block.settings.image %}"
         data-sizes="auto"
         data-parent-fit="cover"
         style="background-image: url({{ block.settings.image | img_url: '300x300' }});">
    </div>
    {%- endif -%}
    {%- endfor -%}
  </div>
    <div class="banner-header large-down--hide"></div>
    <div class="banner-caption d-flex flex-wrap">

      {%- for block in section.blocks -%}
      {%- if block.type == "text" -%}
      <div class="inner_caption {{ block.type }} d-flex flex-wrap align-items-center justify-content-center">
        {%- if block.settings.link != blank -%}<a class="full-width-link" href="{{ block.settings.link }}"></a>{%- endif -%}
        {%- assign image = 'transbg.png' | asset_img_url:'634x' -%}        
        <div class="hover_div full-width-link lazyload" data-bgset="{{image}}" data-sizes="auto" data-parent-fit="cover" style="background-image: url({{ 'transbg.png' | asset_img_url:'317x' }});"></div>
        <div class="wrapper">          
          <h2 class="s-title h2-large">
            {{- block.settings.title -}}</h2>          
        </div>
      </div>
      {%- endif -%}
      {%- if block.type == "text-border" -%}
      <div class="inner_caption {{ block.type }} d-flex flex-wrap align-items-center justify-content-center">
        <div class="wrapper">
          <div class="text-border-title">{{ block.settings.title }}</div>
        </div>
      </div>
      {%- endif -%}
      {%- endfor -%}

    </div>  
  <div class="banner-scroll-arrow">
  	<img class="lazyload" src="{{ 'arrow-next-white.png' | asset_img_url: '1x' }}" data-src="{{ 'arrow-next-white.png' | asset_img_url: '27x32' }}" width="auto" height="auto" />
  </div>
</div>

