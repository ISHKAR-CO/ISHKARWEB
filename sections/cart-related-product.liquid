<div class="section-header text-center">
  <h2 class="h1 cart-related-title wc_s-title s-title s-title-no-boder text-uppercase">
    <span class="inner_warpper">{{ section.settings.title  | default:'You may also like' }}</span></h2>
</div>
<div class="related-object one-whole ">  
  {%- if section.settings.collection != blank -%}
  {%- assign collection = collections[section.settings.collection] -%}
  <ul class="related-object-ul d-flex flex-wrap ishkar-arrow">
    {%- paginate collection.products by 9999  -%}
      {%- for product in collection.products -%}
        <li class="related-object-li small--one-half medium-up--one-third">
          {%- include 'product-card-grid', product:product -%}
        </li>
      {%- endfor -%}
    {%- endpaginate -%}
  </ul>
  {%- endif -%}
</div>
{%- if section.settings.collection != blank -%}
<script defer="defer">
  $(document).ready(function(){
  var prevArrow = '<button class="custom-arrow slick-prev slick-arrow" aria-label="Previous" type="button" aria-disabled="false"><img class="lazyload" src="data:image/png;base64," alt="Previous Arrow" width="auto" height="auto" /></button>';
  var nextArrow = '<button class="custom-arrow slick-next slick-arrow rotated--180deg" aria-label="Next" type="button" aria-disabled="false"><img class="lazyload" src="data:image/png;base64," alt="Next Arrow" width="auto" height="auto" /></button>'; 

  $('.related-object-ul').slick({
    dots: false,
    infinite: false,
    speed: 650,
    slidesToShow: 3,
    slidesToScroll: 1,
    prevArrow : prevArrow,
    nextArrow : nextArrow,
    responsive: [
      {
        breakpoint: 992,
        settings: {
          slidesToShow: 2
        }
      },
      {
        breakpoint: 512,
        settings: {
          slidesToShow: 1
        }
      }
    ]
  });
  })
</script>
{%- endif -%}

{% schema %}
  {
    "name": "You may also like",
    "settings": [
	 {
	  "type":"text",
	  "label":"Enter section title",
	  "id":"title"
	 },
	 {
	  "type":"collection",
	  "label":"Se;ect collection",
	  "id":"collection"
	 }
	]
  }
{% endschema %}

