<div class="home-mobile-section" data-section-id="{{ section.id }}" data-section-type="home-mobile-section" ><div class="mobile-banner-caption d-flex flex-wrap">{%- for block in section.blocks -%}
    {%- if block.type == "text" -%}
    <div class="inner_caption {{ block.type }} d-flex flex-wrap align-items-center justify-content-center">
      {%- if block.settings.mobile_image != blank -%}
      {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}" class="one-whole" >{%- endif -%}
      {%- assign img_url = block.settings.mobile_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      <img class="hero-fixed-width__image lazyload lazypreload" src="data:image/png;base64,R0lGODlhAQABAAD/ACwAAAAAAQABAAACADs=" data-src="{{ img_url }}" data-widths="[180, 360, 470, 600, 770]" data-aspectratio="{{ section.settings.image.aspect_ratio }}" data-sizes="auto" style="{%- if slide_width <= max_width -%}{%- assign min_width = slide_width | times: 100 | divided_by: max_width -%}min-width: {{ min_width }}%;{%- endif -%}"  alt="{{ section.settings.image.alt | escape }}" />
      {%- if block.settings.link != blank -%}</a>{%- endif -%}
      {%- endif -%}<div class="wrapper">{% if block.settings.subtitle != blank %}<h3 class="s-subtitle">{{ block.settings.subtitle }}</h3>{% endif %}<h2 class="s-title h2-large">
          {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}">{%- endif -%}{{ block.settings.title }}{%- if block.settings.link != blank -%}</a>{%- endif -%}</h2>
        {%- if block.settings.content != blank -%}<div class="bnr_small_content"><p>{{block.settings.content}}</p></div>{%- endif -%}
      </div></div>{%- endif -%}{%- endfor -%}</div></div>
{% schema %}
  {
    "name": "Mobile Section",
    "settings": [],
	"blocks":[
	  {
		"type":"text",
		"name":"Text",
		"settings":[
		  {
			"type":"image_picker",
			"id":"mobile_image",
			"label":"Upload Image for mobile"
		  },
		  {
			"type":"text",
			"id":"subtitle",
			"label":"Enter subtitle"			
		  },
		  {
			"type":"text",
			"id":"title",
			"label":"Enter title"
		  },
		  {
			"type":"url",
			"id":"link",
			"label":"Provide link"
		  },
		  {
			"type":"textarea",
			"id":"content",
			"label":"Content"
		  }
		]
	  }
	]
  }
{% endschema %}

