  });
  $(document).on("click", "#newslatter_btn", function () { $.cookie("newsletter", "hide_newsletter", { expires: 1 }); $(this).closest('.show').removeClass('show'); });
 var checked_value = [];
  $('#newsletter-popup .check-box-custom input[name="ishkar"]').click(function(){
    var tag = $(this).closest('form').find('.merge_tag').attr('value');
    if( $(this).is(":checked") == true){ checked_value.push($(this).val()); }else{ 
      var index = checked_value.indexOf($(this).val());
      if (index !== -1) checked_value.splice(index, 1);
    }
    var _tag = ''
    for( var i = 0 ; i < checked_value.length ; i++ ){
      if(i == 0){
        _tag += checked_value[i];
      }else{ _tag = _tag+', '+checked_value[i]; }
    }
    $(this).closest('form').find('.merge_tag').attr('value',_tag);
    
  });
