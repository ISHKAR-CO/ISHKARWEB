{%- for i in (1..3) -%}
{%- capture subtitle -%}subtitle_{{i}}{%- endcapture -%}
{%- capture title -%}title_{{i}}{%- endcapture -%}
{%- capture detail -%}detail_{{i}}{%- endcapture -%}
{%- capture link -%}link_{{i}}{%- endcapture -%}
<li class="grid__item medium-up--one-third hgs-grid-items">
  <div class="wrapper">
    {%- if block.settings[link] != blank -%}<a href="{{ block.settings[link] }}" title="{{ block.settings[link]  | split:'/' | last | replace:'-',' ' | capitalize }}">{%- endif -%}
    {%- if block.settings[subtitle] != blank -%}
    <h4 class="s-subtitle s-not counter-value {% if block.settings[subtitle] == '&nbsp;' -%}block_text{%- endif -%}" data-count="{{ block.settings[subtitle] | strip_html | replace:' ',''| replace:',','' }}" 
        data-text="{{ block.settings[subtitle] }}" >
      {%- unless block.settings[subtitle] == '&nbsp;' -%}
      {{ block.settings[subtitle] }}{%- endunless -%}</h4>
    {%- endif -%}{%- if block.settings[title] != blank -%}
    <h3 class="s-title s-not">{{ block.settings[title] }}</h3>{%- endif -%}{%- if block.settings[detail] != blank -%}
    <div class="text">
      {{ block.settings[detail] | remove:'<p>' | remove:'</p>'  }}
    </div>{%- endif -%}
    {%- if block.settings[link] != blank -%}</a>{%- endif -%}
  </div>
</li>
{%- endfor -%}