<div class="cookie_banner hide"><div class="cookie_btn cross"></div><div class="cookie_banner_content">{{settings.cookie_banner_content}}</div><div class="cookie_btn"><span class="btn">Ok</span></div></div>
<script defer="defer">$(window).on('load',function() { if(typeof(Storage) !== "undefined") { if($.cookie("cookie_banner") == "true"){ $('.cookie_banner').addClass('hide'); } else{ $('.cookie_banner').removeClass('hide'); } } }); $(document).on("click", ".cookie_banner .btn,.cookie_banner .cookie_btn.cross", function () { $.cookie("cookie_banner", true, { expires: 7 }); $(this).closest('.cookie_banner').addClass('hide'); });</script>