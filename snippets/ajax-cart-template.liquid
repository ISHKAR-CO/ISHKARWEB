<script id="CartTemplate" type="text/template" defer="defer">{% raw %}<form action="/cart" method="post" novalidate class="cart_ajax_silder_form"><div class="cart-middle-items"><div class="cart-container">{{#items}}<div class="items_row CartItem"><div class="cart-left"><a class="cart-image" href="{{url}}"><img class="lazyload" data-src="{{img}}" alt="{{name}}"></a></div><div class="cart-right"><div class="cart-title"><a href="{{url}}">{{name}}</a>{{#if variation}}<span class="ajaxcart__product-meta">{{variation}}</span>{{/if}}{{#properties}}{{#each this}}{{#if this}}<span class="ajaxcart__product-meta">{{@key}}: {{this}}</span>{{/if}}{{/each}}{{/properties}}</div><div class="cart-price"><span class="money">{{price}}</span></div><ul class="QuantityBox"><li class="minus-box"><span href="javascript:void(0)" class="minus ajaxcart__qty-adjust cart-slider-decrease-qty ajaxcart__qty--minus" data-id="{{key}}" data-qty="{{itemMinus}}" data-line="{{line}}"><svg class="icon icon-minus icon--full-color" role="presentation" viewBox="0 0 16 2"><path d="M1,1 L15,1" stroke="currentColor" fill="none" fill-rule="evenodd" stroke-linecap="square"></path></svg></span></li><li class="input-box"><input type="text" name="updates[]" class="QuantityInput Quantity_cart_slider ajaxcart__qty-num" value="{{itemQty}}" min="0" data-id="{{key}}" data-line="{{line}}" readonly></li><li class="plus-box"><span href="javascript:void(0)" class="plus ajaxcart__qty-adjust cart-slider-increase-qty ajaxcart__qty--plus" data-id="{{key}}" data-line="{{line}}" data-qty="{{itemAdd}}"><svg class="icon icon--plus icon--full-color" role="presentation" viewBox="0 0 16 16"><g stroke="currentColor" fill="none" fill-rule="evenodd" stroke-linecap="square"><path d="M8,1 L8,15"></path><path d="M1,8 L15,8"></path></g></svg></span></li></ul>{% endraw %}{%- comment -%}<span class="cart_remove_item hide" data-id="{{key}}" data-line="{{line}}"></span>{%- endcomment -%}{% raw %}</div></div>{{/items}}</div><a href="javascript:void(0)" class="cart-close con-shopping" aria-describedby="a11y-external-message">{% endraw %}{{ 'general.cart_drawer.continue_shopping' | t }}{% raw %}</a></div><div class="block-cart-footer secondary-font"><div class="cart-container">{% endraw %}{%- comment -%}<button type="button" class="Cart__NoteButton" data-action="toggle-cart-note">Add Write note to your order:</button>{%- endcomment -%}{% raw %}<p class="note-detail">{% endraw %}{{ 'general.cart_drawer.cart_note_html' | t }}{% raw %}</p><div class="functionCart"><textarea name="note"></textarea></div>{% endraw %}{%- comment -%}<div class="subtotal"> <span class="hide">Total :</span><span class="cart-total-right money hide"><span class="money">{{totalPrice}}</span></span>{%- endcomment -%}{% raw %}<div class="subtotal"><p>{% endraw %}{{ 'general.cart_drawer.shipping_text' | t }}{% raw %}</p></div></div><div class="cart-btn"><button type="submit" name="checkout" class="btn btn--secondary-accent">{% endraw %}{{ 'general.cart_drawer.checkout_button' | t }}{% raw %}</button></div></div></div></form>{% endraw %}</script>